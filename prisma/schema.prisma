// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Change to "postgresql" for production
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tour {
  id            String         @id @default(uuid())
  slug          String         @unique
  title_en      String
  title_de      String
  description_en String
  description_de String
  startDate     DateTime
  endDate       DateTime
  difficulty    String         // Easy, Medium, Hard, Expert
  priceEur      Float
  priceInr      Float
  routeMapUrl   String?
  status        String         // Available, Last Seats, Sold Out
  images        GalleryImage[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Post {
  id            String   @id @default(uuid())
  slug          String   @unique
  title_en      String
  title_de      String
  content_en    String   // Rich text content (HTML/JSON)
  content_de    String   // Rich text content (HTML/JSON)
  published     Boolean  @default(false)
  coverImage    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model GalleryImage {
  id        String   @id @default(uuid())
  url       String
  caption   String?
  tourId    String?
  tour      Tour?    @relation(fields: [tourId], references: [id])
  tags      String?  // Comma separated tags
  createdAt DateTime @default(now())
}
